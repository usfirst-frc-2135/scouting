<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">


            <TextView
                android:id="@+id/hub_scoring_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hub Scoring"
                android:textSize="24dp"
                style="?android:listSeparatorTextViewStyle"
                android:textColor="@color/textPrimary"
                android:paddingTop="10dp"
                android:paddingBottom="15dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/highTitle"
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:text="Upper Hub"
                    android:textSize="18dp"
                    style="?android:listSeparatorTextViewStyle"
                    android:textColor="@color/textSecondary"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/highpointsdec"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="30dp"
                        android:layout_weight="1"
                        android:background="#3F98B5"
                        android:text="@string/decrease"
                        android:textColor="#FFC107"
                        android:textSize="30dp"></Button>

                    <TextView
                        android:id="@+id/highpoints"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="25dp"
                        android:layout_weight="3"
                        android:textAlignment="center">
                    </TextView>

                    <Button
                        android:id="@+id/highpointsinc"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="30dp"
                        android:layout_weight="1"
                        android:background="#3F98B5"
                        android:text="@string/increase"
                        android:textColor="#FFC107"
                        android:textSize="30dp"></Button>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/lowTitle"
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:text="Lower Hub"
                    android:textSize="18dp"
                    style="?android:listSeparatorTextViewStyle"
                    android:textColor="@color/textSecondary"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <Button
                        android:id="@+id/lowpointsdec"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="30dp"
                        android:layout_weight="1"
                        android:background="#FFC107"
                        android:text="@string/decrease"
                        android:textColor="#3F98B5"
                        android:textSize="30dp"></Button>

                    <TextView
                        android:id="@+id/lowpoints"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="25dp"
                        android:layout_weight="3"
                        android:textAlignment="center">
                    </TextView>

                    <Button
                        android:id="@+id/lowpointsinc"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="30dp"
                        android:layout_weight="1"
                        android:background="#FFC107"
                        android:text="@string/increase"
                        android:textColor="#3F98B5"
                        android:textSize="30dp"></Button>
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>


    </ScrollView>





</androidx.coordinatorlayout.widget.CoordinatorLayout>