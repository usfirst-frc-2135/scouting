<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/amp_scoring_title"
            style="?android:listSeparatorTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/top_rounded_rect"
            android:paddingTop="20dp"
            android:paddingBottom="1dp"
            android:text="Pick up from floor"
            android:backgroundTint="#faccc8"
            android:textColor="@color/specialTextPrimary"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FCD9DF"
            android:orientation="horizontal">

        <CheckBox
            android:id="@+id/pickup_coral"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:textSize="20sp"
            android:text="Algae" />


            <CheckBox
                android:id="@+id/pickup_algae"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Coral" />

        </LinearLayout>


        <TextView
            android:id="@+id/textView2"
            style="?android:listSeparatorTextViewStyle"
            android:textColor="#000000"
            android:background="#CEEAF5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Handling game pieces"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="#b3E5f2"
            android:background="@drawable/bottom_rounded_rect"
            android:orientation="vertical">


            <CheckBox
                android:id="@+id/knock_algae_off"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:textSize="20sp"
                android:text="Knock off algae from reef" />

            <CheckBox
                android:id="@+id/algae_from_reef"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:textSize="20sp"
                android:text="Acquire Algae froom reef" />

            <CheckBox
                android:id="@+id/hold_both_elements"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:textSize="20sp"
                android:text="Can hold both game pieces at once" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:backgroundTint="#FCD9DF"
                android:background="@drawable/bottom_rounded_rect"
                >
            <TextView
                android:id="@+id/textView3"
                style="?android:listSeparatorTextViewStyle"
                android:textColor="#000000"
                android:background="#faccc8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="defense"
                android:textSize="24sp" />

            <CheckBox
                android:id="@+id/played_defense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"

                android:textSize="20sp"
                android:text="played defense" />


            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>