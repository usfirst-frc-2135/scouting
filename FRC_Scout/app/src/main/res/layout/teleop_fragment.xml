<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

<!-- GAME PIECE MANIPULATION starts-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/rounded_rect"
            android:backgroundTint="#CACFF9"
            android:orientation="vertical">

            <!-- HOPPER layout starts-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

            <TextView
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:text="HOPPER"
                android:textColor="@color/specialTextPrimary"
                android:textSize="22sp" />
                <!-- HOPPER +/- BUTTONS start-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="5dp"
                    android:paddingTop="5dp"
                    android:layout_marginLeft="10dp">

                <Button
                    android:id="@+id/hopper_used_decr_button"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:background="@drawable/rounded_rect"
                    android:backgroundTint="#017371"
                    android:text="@string/decrease"
                    android:textColor="#FFFFFF"
                    android:layout_marginLeft="70dp"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/hopper_used_total"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:textAlignment="center"
                    android:paddingBottom="5dp"
                    android:layout_marginTop="8dp"
                    android:textSize="25sp" />

                <Button
                    android:id="@+id/hopper_used_incr_button"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="30dp"
                    android:background="@drawable/rounded_rect"
                    android:text="@string/increase"
                    android:backgroundTint="#017371"
                    android:textColor="#FFFFFF"
                    android:textSize="30dp" />

                </LinearLayout>
                <!-- HOPPER +/- BUTTONS end-->
            </LinearLayout>
            <!-- HOPPER layout ends -->


            <!-- ACCURACY RATING starts-->
                <TextView
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="7dp"
                    android:textSize="22sp"
                    android:background="#DFE2FB"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/specialTextPrimary"
                    android:text="ACCURACY RATE" />


                <RadioGroup
                    android:id="@+id/accuracy_buttons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="#DFE2FB">

                    <RadioButton
                        android:layout_marginStart="10dp"
                        android:id="@+id/accuracy_NA"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="22sp"
                        android:buttonTint="#8957A1"
                        android:text="N/A" />

                    <RadioButton
                        android:layout_marginBottom="5dp"
                        android:id="@+id/accuracy_most"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="22sp"
                        android:buttonTint="#8957A1"
                        android:text="Most" />

                    <RadioButton
                        android:id="@+id/accuracy_three_fourths"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="22sp"
                        android:buttonTint="#8957A1"
                        android:text="¾" />

                    <RadioButton
                        android:id="@+id/accuracy_half"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="22sp"
                        android:buttonTint="#8957A1"
                        android:text="½" />

                    <RadioButton
                        android:layout_marginTop="30dp"
                        android:layout_marginStart="-537dp"
                        android:id="@+id/accuracy_quarter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="22sp"
                        android:buttonTint="#8957A1"
                        android:text="¼" />

                    <RadioButton
                        android:layout_marginStart="21.5dp"
                        android:layout_marginTop="30dp"
                        android:id="@+id/accuracy_few"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="22sp"
                        android:paddingEnd="5dp"
                        android:buttonTint="#8957A1"
                        android:text="Few" />

                    <RadioButton
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="30dp"
                        android:id="@+id/accuracy_none"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="22sp"
                        android:buttonTint="#8957A1"
                        android:text="None"/>

                    <RadioButton
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="30dp"
                        android:id="@+id/teleop_accuracy_cannot_tell"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="22sp"
                        android:buttonTint="#c45120"
                        android:layout_marginBottom="5dp"
                        android:visibility="invisible"
                        android:text="IDK" />
                </RadioGroup>
                <!-- ACCURACY RATING ends-->

            <!--INTAKE AND SHOOT CHECKBOX layout starts -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/bottom_rounded_rect"
                android:backgroundTint="#EAECFD">

                <CheckBox
                    android:layout_marginTop="5dp"
                    android:id="@+id/intake_and_shoot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="#8957A1"
                    android:text="Intake and shoot at the same time"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:backgroundTint="#EAECFD"
                    android:textSize="20sp" />

            </LinearLayout>
            <!--INTAKE AND SHOOT CHECKBOX layout ends -->
        </LinearLayout>
        <!-- GAME PIECE MANIPULATION ends -->

            <!-- PASSING SECTION layout starts -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:background="@drawable/rounded_rect"
                android:backgroundTint="#87CEEB"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/algae_scored_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="7dp"
                    android:text="PASSING FROM"
                    android:textColor="@color/specialTextPrimary"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <!-- PASSING FROM CHECKBOXES layout starts -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="22dp"
                        android:paddingStart="10dp"
                        android:textColor="#000000"
                        android:text="Neutral Zone">
                    </TextView>

                    <!-- NEUTRAL ZONE CHECKBOX starts -->
                    <RadioGroup
                        android:layout_width="127dp"
                        android:id="@+id/pass_nz"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingStart="7dp"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/no_nz"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="22sp"
                            android:buttonTint="#051650"
                            android:text="No" />

                        <RadioButton
                            android:id="@+id/yes_nz"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="22sp"
                            android:buttonTint="#051650"
                            android:text="Yes" />
                    </RadioGroup>
                    <!-- NEUTRAL ZONE CHECKBOX ends -->


                    <!-- OTHER ALLIANCE ZONE CHECKBOX starts -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="22dp"
                        android:paddingStart="60dp"
                        android:textColor="#000000"
                        android:text="Alliance Zone">
                    </TextView>

                        <RadioGroup
                            android:layout_width="127dp"
                            android:id="@+id/pass_az"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="neutral zone"
                            android:paddingStart="7dp"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/no_az"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textSize="22sp"
                                android:buttonTint="#051650"
                                android:text="No" />

                            <RadioButton
                                android:id="@+id/yes_az"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textSize="20sp"
                                android:buttonTint="#051650"
                                android:text="Yes" />
                        </RadioGroup>
                        <!-- NEUTRAL ZONE CHECKBOX layout ends -->
                </LinearLayout>
                <!-- PASSING FROM CHECKBOXES layout ends -->


                <!-- PASSING EFFECTIVENESS RATING layout starts -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#ADD8EF"
                    android:background="@drawable/bottom_rounded_rect"
                    android:orientation="vertical">

                    <TextView
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:textSize="22sp"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/specialTextPrimary"
                        android:text="PASSING EFFECTIVENESS RATE" />

                    <RadioGroup
                        android:id="@+id/passing_effectiveness_buttons"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="5dp"
                        android:backgroundTint="#ADD8EF"
                        android:layout_marginLeft="10dp">

                        <RadioButton
                            android:id="@+id/passing_rate_na"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="20sp"
                            android:buttonTint="#051650"
                            android:text="N/A" />

                        <RadioButton
                            android:id="@+id/passing_low"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="20sp"
                            android:buttonTint="#051650"
                            android:text="Low" />

                        <RadioButton
                            android:id="@+id/passing_medium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="20sp"
                            android:buttonTint="#051650"
                            android:text="Medium" />

                        <RadioButton
                            android:id="@+id/passing_large"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="20sp"
                            android:buttonTint="#051650"
                            android:text="Large" />

                        <RadioButton
                            android:id="@+id/passing_tons"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="20sp"
                            android:buttonTint="#051650"
                            android:text="Tons" />
                    </RadioGroup>
                </LinearLayout>
                <!-- PASSING EFFECTIVENESS RATING layout ends -->
            </LinearLayout>
            <!-- PASSING SECTION layout starts -->

        <!-- DEFENSE SECTION layout start-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:orientation="vertical"
            android:background="@drawable/rounded_rect"
            android:paddingTop="7dp"
            android:backgroundTint="#DEEFF5">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="120dp"
                android:layout_marginLeft="5dp"
                android:textStyle="bold"
                android:layout_height="34dp"
                android:text="DEFENSE"
                android:textColor="@color/specialTextPrimary"
                android:textSize="22sp" />

            <RadioGroup
                android:id="@+id/defense_buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/defense_none"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:buttonTint="#051650"
                    android:text="N/A" />

                <RadioButton
                    android:id="@+id/defense_low"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:buttonTint="#051650"
                    android:text="Low"/>

                <RadioButton
                    android:id="@+id/defense_medium_low"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:buttonTint="#051650"
                    android:text="M low"/>

                <RadioButton
                    android:id="@+id/defense_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:buttonTint="#051650"
                    android:text="Medium"/>

                <RadioButton
                    android:id="@+id/defense_medium_high"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:buttonTint="#051650"
                    android:text="M high"/>

                <RadioButton
                    android:id="@+id/defense_high"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:buttonTint="#051650"
                    android:text="High"/>
            </RadioGroup>
        </LinearLayout>
        <!-- DEFENSE SECTION layout ends -->


        <!-- DRIVER ABILITY layout starts-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:background="@drawable/rounded_rect"
            android:backgroundTint="#DFE2FB"
            android:orientation="vertical"
            android:paddingTop="7dp"
            android:paddingBottom="5dp">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="DRIVING ABILITY"
                android:textColor="@color/specialTextPrimary"
                android:textSize="22sp"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/driving_buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#DFE2FB">

                <RadioButton
                    android:id="@+id/driving_na"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:buttonTint="#051650"
                    android:text="N/A" />

                <RadioButton
                    android:id="@+id/driving_slow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:buttonTint="#051650"
                    android:text="Slow"/>

                <RadioButton
                    android:id="@+id/driving_jerky"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:buttonTint="#051650"
                    android:text="Jerky"/>

                <RadioButton
                    android:id="@+id/driving_avg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:buttonTint="#051650"
                    android:text="Avg"/>

                <RadioButton
                    android:id="@+id/driving_fast"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:buttonTint="#051650"
                    android:text="Fast"/>

                <RadioButton
                    android:id="@+id/driving_elite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:buttonTint="#051650"
                    android:text="Elite"/>
            </RadioGroup>

        </LinearLayout>
        <!-- DRIVER ABILITY layout ends-->

        <!-- PHOTO layout starts-->
        <LinearLayout
            android:id="@+id/photo"
            android:layout_width="589dp"
            android:layout_height="186dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/rebuilt_logo"
            android:orientation="horizontal"
            android:paddingTop="2dp">

        </LinearLayout>
        <!-- PHOTO layout ends-->


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
