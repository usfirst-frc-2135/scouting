<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">


            <android.widget.Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <TextView
                android:id="@+id/amp_scoring_title"
                style="?android:listSeparatorTextViewStyle"
                android:background="@drawable/top_rounded_rect"
                android:backgroundTint="#DFF7DF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:paddingBottom="1dp"
                android:text="AMP SCORING"
                android:textColor="@color/specialTextPrimary"
                android:textSize="24sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:background="@color/teleopUpperCardColor"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="20dp"
                android:paddingBottom="20dp">

                <TextView
                    android:layout_marginStart="8dp"
                    android:background="#DFF7D7"
                    style="?android:listSeparatorTextViewStyle"
                    android:layout_width="190dp"
                    android:layout_height="match_parent"
                    android:text="# of Notes"
                    android:textColor="@color/specialTextSecondary"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/teleop_amp_scoring_decr"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_rect"
                    android:text="@string/decrease"
                    android:textColor="#9F3FB5"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/teleop_amp_scoring_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:textAlignment="center"
                    android:textSize="25sp" />

                <Button
                    android:id="@+id/teleop_amp_scoring_incr"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_rect"
                    android:text="@string/increase"
                    android:textColor="#9F3FB5"
                    android:textSize="30sp" />
            </LinearLayout>


            <TextView
                android:id="@+id/speaker_scoring_title"
                style="?android:listSeparatorTextViewStyle"
                android:background="@color/teleopLowerCardColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:paddingBottom="1dp"
                android:text="SPEAKER SCORING"
                android:textColor="@color/specialTextPrimary"
                android:textSize="24sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:background="@drawable/bottom_rounded_rect"
                android:backgroundTint="#CEEAF5"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="20dp"
                android:paddingBottom="20dp">

                <TextView
                    android:layout_marginStart="8dp"
                    style="?android:listSeparatorTextViewStyle"
                    android:background="#CEEAF5"
                    android:layout_width="190dp"
                    android:layout_height="match_parent"
                    android:text="# of notes"
                    android:textColor="@color/specialTextSecondary"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/teleop_speaker_scoring_decr"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_rect"
                    android:backgroundTint="#9F3FB5"
                    android:text="@string/decrease"
                    android:textColor="#FFC107"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/teleop_speaker_scoring_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="25sp"
                    android:layout_weight="3"
                    android:textAlignment="center" />

                <Button
                    android:id="@+id/teleop_speaker_scoring_incr"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_rect"
                    android:backgroundTint="#9F3FB5"
                    android:text="@string/increase"
                    android:textColor="#FFC107"
                    android:textSize="30sp" />
            </LinearLayout>



        </LinearLayout>


    </ScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>