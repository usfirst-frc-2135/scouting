<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/acquire_game_piece"
                style="?android:listSeparatorTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingTop="2dp"
                android:paddingBottom="1dp"
                android:text="Acquire Game Piece"
                android:backgroundTint="#CEEAF5"
                android:textColor="@color/specialTextPrimary"
                android:background="@drawable/top_rounded_rect"
                android:textSize="24sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#b3E5f2">

                <TextView
                    android:id="@+id/coral_text"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:textSize="20sp"
                    android:paddingBottom="15dp"
                    android:background="#b3E5f2"
                    android:textColor="#000000"
                    android:text="Coral" />

                <Button
                    android:id="@+id/coral_acquire_decr"
                    android:layout_width="45dp"
                    android:layout_height="30dp"
                    android:background="@drawable/rounded_rect"
                    android:backgroundTint="#faccc8"
                    android:text="@string/decrease"
                    android:textColor="#9F3FB5"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/coral_acquire_text"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:textAlignment="center"
                    android:textSize="25sp" />

                <Button
                    android:id="@+id/coral_acquire_incr"
                    android:layout_width="45dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="30dp"
                    android:background="@drawable/rounded_rect"
                    android:text="@string/increase"
                    android:backgroundTint="#faccc8"
                    android:textColor="#9F3FB5"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/algae_text"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:paddingBottom="15dp"
                    android:background="#b3E5f2"
                    android:textColor="#000000"
                    android:text="Algae" />


                <Button
                    android:id="@+id/algae_acquire_decr"
                    android:layout_width="45dp"
                    android:layout_height="30dp"
                    android:background="@drawable/rounded_rect"
                    android:backgroundTint="#faccc8"
                    android:text="@string/decrease"
                    android:textColor="#9F3FB5"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/algae_acquire_text"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:textAlignment="center"
                    android:textSize="25sp" />

                <Button
                    android:id="@+id/algae_acquire_incr"
                    android:layout_width="45dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="30dp"
                    android:background="@drawable/rounded_rect"
                    android:text="@string/increase"
                    android:backgroundTint="#faccc8"
                    android:textColor="#9F3FB5"
                    android:textSize="20dp" />



            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/amp_scoring_title"
            style="?android:listSeparatorTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="2dp"
            android:paddingBottom="1dp"
            android:text="Pick up from floor"
            android:background="#faccc8"
            android:textColor="@color/specialTextPrimary"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FCD9DF"
            android:orientation="horizontal">

        <CheckBox
            android:id="@+id/pickup_coral"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:textSize="20sp"
            android:text="Algae" />


            <CheckBox
                android:id="@+id/pickup_algae"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Coral" />

        </LinearLayout>


        <TextView
            android:id="@+id/textView2"
            style="?android:listSeparatorTextViewStyle"
            android:textColor="#000000"
            android:background="#CEEAF5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Handling game pieces"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="#b3E5f2"
            android:background="@drawable/bottom_rounded_rect"
            android:orientation="vertical">


            <CheckBox
                android:id="@+id/knock_algae_off"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:textSize="20sp"
                android:text="Knock off algae from reef" />

            <CheckBox
                android:id="@+id/algae_from_reef"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:textSize="20sp"
                android:text="Acquire Algae froom reef" />

            <CheckBox
                android:id="@+id/hold_both_elements"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:textSize="20sp"
                android:text="Can hold both game pieces at once" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/bottom_rounded_rect"
                android:backgroundTint="#FCD9DF"
                >
            <TextView
                android:id="@+id/textView3"
                style="?android:listSeparatorTextViewStyle"
                android:textColor="#000000"
                android:background="#faccc8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="defense"
                android:textSize="24sp" />

            <CheckBox
                android:id="@+id/played_defense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:textSize="20sp"
                android:text="played defense"
                />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>