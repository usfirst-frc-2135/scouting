<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

<!-- ACQUIRE GAME PIECE starts -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:background="@drawable/rounded_rect"
            android:backgroundTint="#CACFF9"
            android:orientation="vertical">

            <TextView
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:text="SHOOTING"
                android:textColor="@color/specialTextPrimary"
                android:textSize="22sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="7dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textSize="20sp"
                    android:background="#CACFF9"
                    android:textColor="@color/specialTextPrimary"
                    android:text="NUMBER OF HOPPERS USED" />

                <Button
                    android:id="@+id/hopper_used_decr_button"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:background="@drawable/rounded_rect"
                    android:backgroundTint="#017371"
                    android:text="@string/decrease"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="70dp"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/hopper_used_total"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:textAlignment="center"
                    android:layout_marginTop="8dp"
                    android:textSize="25sp" />

                <Button
                    android:id="@+id/hopper_used_incr_button"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="30dp"
                    android:background="@drawable/rounded_rect"
                    android:text="@string/increase"
                    android:layout_marginTop="5dp"
                    android:backgroundTint="#017371"
                    android:textColor="#FFFFFF"
                    android:textSize="30dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:background="#DFE2FB">

                <TextView
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7dp"
                    android:textSize="22sp"
                    android:background="#DFE2FB"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/specialTextPrimary"
                    android:text="ACCURACY RATE" />

            </LinearLayout>

                <RadioGroup
                    android:id="@+id/accuracy_buttons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="#DFE2FB">

                    <RadioButton
                        android:layout_marginStart="10dp"
                        android:id="@+id/accuracy_NA"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="20sp"
                        android:buttonTint="#8957A1"
                        android:text="N/A" />

                <RadioButton
                    android:layout_marginBottom="5dp"
                    android:id="@+id/accuracy_most"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:buttonTint="#8957A1"
                    android:text="Most" />

                <RadioButton
                    android:id="@+id/accuracy_three_fourths"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:buttonTint="#8957A1"
                    android:text="¾" />

                <RadioButton
                    android:id="@+id/accuracy_half"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:buttonTint="#8957A1"
                    android:text="½" />

                <RadioButton
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="-574dp"
                    android:id="@+id/accuracy_quarter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:buttonTint="#8957A1"
                    android:text="¼" />

                <RadioButton
                    android:layout_marginStart="21dp"
                    android:layout_marginTop="30dp"
                    android:id="@+id/accuracy_few"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:buttonTint="#8957A1"
                    android:text="Few" />

                <RadioButton
                    android:layout_marginStart="10.5dp"
                    android:layout_marginTop="30dp"
                    android:id="@+id/accuracy_none"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:buttonTint="#8957A1"
                    android:text="0" />

                    <RadioButton
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="30dp"
                    android:id="@+id/accuracy_cannot_tell"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:buttonTint="#8957A1"
                    android:layout_marginBottom="5dp"
                    android:text="IDK" />

            </RadioGroup>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#EAECFD">

                <CheckBox
                    android:layout_marginTop="5dp"
                    android:id="@+id/intake_and_shoot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="#8957A1"
                    android:text="Intake and shoot at the same time"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="20sp" />

            </LinearLayout>
        </LinearLayout>
<!-- end ACQUIRE GAME PIECE -->

<!-- start ALGAE/CORAL SCORING side-by-side section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/backgroundColor"
            android:orientation="horizontal"
            android:paddingTop="2dp">
                
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:background="@drawable/rounded_rect"
                android:backgroundTint="#87CEEB"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/algae_scored_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="7dp"
                    android:text="PASSING"
                    android:textColor="@color/specialTextPrimary"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <CheckBox
                    android:id="@+id/from_neutral_zone_to_alliance_zone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="#051650"
                    android:text="From neutral zone to alliance zone"
                    android:layout_marginLeft="10dp"
                    android:textSize="20sp" />

                <CheckBox
                    android:id="@+id/from_alliance_zone_to_other_alliance_zone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="#051650"
                    android:text="From alliance zone to other alliance zone"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#ADD8EF">

                    <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:textSize="22sp"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/specialTextPrimary"
                        android:text="PASSING EFFECTIVENESS RATE" />

                </LinearLayout>

                <RadioGroup
                    android:id="@+id/passing_effectiveness_buttons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp">

                    <RadioButton
                        android:id="@+id/passing_rate_na"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="20sp"
                        android:buttonTint="#051650"
                        android:text="N/A" />

                    <RadioButton
                        android:id="@+id/passing_tons"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="20sp"
                        android:buttonTint="#051650"
                        android:text="Tons" />

                    <RadioButton
                        android:id="@+id/passing_large"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="20sp"
                        android:buttonTint="#051650"
                        android:text="Large" />

                    <RadioButton
                        android:id="@+id/passing_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="20sp"
                        android:buttonTint="#051650"
                        android:text="Medium" />

                    <RadioButton
                        android:id="@+id/passing_low"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="20sp"
                        android:buttonTint="#051650"
                        android:text="Low" />

                </RadioGroup>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
<!-- end ALGAE/CORAL section -->

<!-- start DEFENSE section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:orientation="horizontal"
            android:background="@drawable/rounded_rect"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:backgroundTint="#DEEFF5">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="120dp"
                android:layout_marginLeft="5dp"
                android:textStyle="bold"
                android:layout_height="34dp"
                android:text="DEFENSE"
                android:textColor="@color/specialTextPrimary"
                android:textSize="22sp" />

            <RadioGroup
                android:id="@+id/defense_buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/defense_none"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="22sp"
                    android:buttonTint="#051650"
                    android:text="N/A" />

                <RadioButton
                    android:id="@+id/defense_low"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="22sp"
                    android:buttonTint="#051650"
                    android:text="Low"/>

                <RadioButton
                    android:id="@+id/defense_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="22sp"
                    android:buttonTint="#051650"
                    android:text="Medium"/>

                <RadioButton
                    android:id="@+id/defense_high"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="22sp"
                    android:buttonTint="#051650"
                    android:text="High"/>
            </RadioGroup>
        </LinearLayout>
<!-- end DEFENSE section -->

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
