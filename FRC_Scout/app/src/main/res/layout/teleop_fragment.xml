<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">


            <android.widget.Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <TextView
            android:id="@+id/cone_scoring_title"
            style="?android:listSeparatorTextViewStyle"
            android:background="@color/teleopuppercardColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
                android:paddingBottom="1dp"
            android:text="CONE SCORING"
            android:textColor="@color/specialTextPrimary"
            android:textSize="24sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:background="@color/teleopuppercardColor"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="1dp">

                <TextView
                    android:id="@+id/cone_top_title"
                    android:background="@color/teleopuppercardColor"
                    android:layout_width="190dp"
                    android:layout_height="match_parent"
                    android:text="Top Row"
                    android:textSize="18sp"
                    style="?android:listSeparatorTextViewStyle"
                    android:textColor="@color/specialTextSecondary"/>

                <Button
                    android:id="@+id/teleopcone_top_decr"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    android:background="#FFC107"
                    android:text="@string/decrease"
                    android:textColor="#9F3FB5"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/teleopcone_top_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="25sp"
                    android:layout_weight="3"
                    android:textAlignment="center" />

                <Button
                    android:id="@+id/teleopcone_top_incr"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="30dp"
                    android:layout_weight="1"
                    android:background="#FFC107"
                    android:text="@string/increase"
                    android:textColor="#9F3FB5"
                    android:textSize="30sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:background="@color/teleopuppercardColor"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="20dp"
                android:paddingBottom="1dp">

                <TextView
                    android:id="@+id/cone_middle_title"
                    android:background="@color/teleopuppercardColor"
                    style="?android:listSeparatorTextViewStyle"
                    android:layout_width="190dp"
                    android:layout_height="match_parent"
                    android:text="Middle Row"
                    android:textColor="@color/specialTextSecondary"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/teleopcone_middle_decr"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    android:background="#ffdc70"
                    android:text="@string/decrease"
                    android:textColor="#d779ed"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/teleopcone_middle_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:textAlignment="center"
                    android:textSize="25sp" />

                <Button
                    android:id="@+id/teleopcone_middle_incr"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="30dp"
                    android:layout_weight="1"
                    android:background="#ffdc70"
                    android:text="@string/increase"
                    android:textColor="#d779ed"
                    android:textSize="30sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:background="@color/teleopuppercardColor"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="20dp"
                android:paddingBottom="20dp">

                <TextView
                    android:id="@+id/cone_bottom_title"
                    android:background="@color/teleopuppercardColor"
                    style="?android:listSeparatorTextViewStyle"
                    android:layout_width="190dp"
                    android:layout_height="match_parent"
                    android:text="Bottom Row"
                    android:textColor="@color/specialTextSecondary"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/teleopcone_bottom_decr"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    android:background="#fdefb2"
                    android:text="@string/decrease"
                    android:textColor="#e6a4f5"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/teleopcone_bottom_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:textAlignment="center"
                    android:textSize="25sp" />

                <Button
                    android:id="@+id/teleopcone_bottom_incr"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="30dp"
                    android:layout_weight="1"
                    android:background="#fdefb2"
                    android:text="@string/increase"
                    android:textColor="#e6a4f5"
                    android:textSize="30sp" />
            </LinearLayout>


            <TextView
                android:id="@+id/cube_scoring_title"
                style="?android:listSeparatorTextViewStyle"
                android:background="@color/teleoplowercardColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:paddingBottom="1dp"
                android:text="CUBE SCORING"
                android:textColor="@color/specialTextPrimary"
                android:textSize="24sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:background="@color/teleoplowercardColor"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="1dp">

                <TextView
                    android:id="@+id/cube_top_title"
                    android:background="@color/teleoplowercardColor"
                    android:layout_width="190dp"
                    android:layout_height="match_parent"
                    android:text="Top Row"
                    android:textSize="18sp"
                    style="?android:listSeparatorTextViewStyle"
                    android:textColor="@color/specialTextSecondary"/>

                <Button
                    android:id="@+id/teleopcube_top_decr"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    android:background="#9F3FB5"
                    android:text="@string/decrease"
                    android:textColor="#FFC107"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/teleopcube_top_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="25sp"
                    android:layout_weight="3"
                    android:textAlignment="center">
                </TextView>

                <Button
                    android:id="@+id/teleopcube_top_incr"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="30dp"
                    android:layout_weight="1"
                    android:background="#9F3FB5"
                    android:text="@string/increase"
                    android:textColor="#FFC107"
                    android:textSize="30sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:background="@color/teleoplowercardColor"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="20dp"
                android:paddingBottom="1dp">

                <TextView
                    android:id="@+id/cube_middle_title"
                    android:background="@color/teleoplowercardColor"
                    android:layout_width="190dp"
                    android:layout_height="match_parent"
                    android:text="Middle Row"
                    android:textSize="18sp"
                    style="?android:listSeparatorTextViewStyle"
                    android:textColor="@color/specialTextSecondary"
                    />

                <Button
                    android:id="@+id/teleopcube_middle_decr"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    android:background="#d779ed"
                    android:text="@string/decrease"
                    android:textColor="#ffdc70"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/teleopcube_middle_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="25sp"
                    android:layout_weight="3"
                    android:textAlignment="center">
                </TextView>

                <Button
                    android:id="@+id/teleopcube_middle_incr"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="30dp"
                    android:layout_weight="1"
                    android:background="#d779ed"
                    android:text="@string/increase"
                    android:textColor="#ffdc70"
                    android:textSize="30sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:background="@color/teleoplowercardColor"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="20dp"
                android:paddingBottom="20dp">

                <TextView
                    android:id="@+id/cube_bottom_title"
                    android:background="@color/teleoplowercardColor"
                    android:layout_width="190dp"
                    android:layout_height="match_parent"
                    android:text="Bottom Row"
                    android:textSize="18sp"
                    style="?android:listSeparatorTextViewStyle"
                    android:textColor="@color/specialTextSecondary"/>

                <Button
                    android:id="@+id/teleopcube_bottom_decr"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    android:background="#e6a4f5"
                    android:text="@string/decrease"
                    android:textColor="#fdefb2"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/teleopcube_bottom_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="25sp"
                    android:layout_weight="3"
                    android:textAlignment="center">
                </TextView>

                <Button
                    android:id="@+id/teleopcube_bottom_incr"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="30dp"
                    android:layout_weight="1"
                    android:background="#e6a4f5"
                    android:text="@string/increase"
                    android:textColor="#fdefb2"
                    android:textSize="30sp" />
            </LinearLayout>


            <TextView
                android:id="@+id/floorpickup_scoring_title"
                style="?android:listSeparatorTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingTop="20dp"
                android:paddingBottom="10dp"
                android:text="Pickup from Floor"
                android:textColor="@color/textPrimary"
                android:textSize="24sp" />

            <CheckBox
                android:id="@+id/pickup_cube_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cube"
                android:buttonTint="@color/textPrimary"
                android:textSize="22sp"
                android:textColor="@color/textPrimary" />

            <CheckBox
                android:id="@+id/pickup_upright_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/textPrimary"
                android:text="Upright cone"
                android:textColor="@color/textPrimary"
                android:textSize="22sp" />

            <CheckBox
                android:id="@+id/pickup_tipped_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/textPrimary"
                android:text="Tipped over cone"
                android:textColor="@color/textPrimary"
                android:textSize="22sp" />

        </LinearLayout>


    </ScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>