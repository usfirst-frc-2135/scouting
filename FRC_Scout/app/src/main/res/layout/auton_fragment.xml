<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp">
            <TextView
                android:id="@+id/autonomous_title_init_line"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:text="Initiation Line"
                android:textSize="24dp"
                style="?android:listSeparatorTextViewStyle"
                android:textColor="#000000"/>



            <CheckBox
                android:id="@+id/auto_line_checkbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:text="@string/auto_line"
                android:textSize="18dp" />

        </LinearLayout>

            <TextView
                android:id="@+id/power_port_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/teleop_power_port"
                android:textSize="24dp"
                style="?android:listSeparatorTextViewStyle"
                android:textColor="#000000"
                android:paddingTop="20dp"
                android:paddingBottom="10dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/highportTitle"
                    android:layout_width="190dp"
                    android:layout_height="match_parent"
                    android:text="@string/outerPortTitle"
                    android:textSize="18dp"
                    style="?android:listSeparatorTextViewStyle"/>
                <Button
                    android:id="@+id/highportpointsdec"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/decrease"
                    android:textSize="30dp"
                    android:layout_weight="1"
                    android:textColor="#3F51B5"
                    android:background="#FFC107"
                    android:layout_marginLeft="16dp">
                </Button>

                <TextView
                    android:id="@+id/highportpoints"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="25dp"
                    android:layout_weight="3"
                    android:textAlignment="center">
                </TextView>

                <Button
                    android:id="@+id/highportpointsinc"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/increase"
                    android:textSize="30dp"
                    android:layout_weight="1"
                    android:textColor="#3F51B5"
                    android:background="#FFC107"
                    android:layout_marginRight="30dp">
                </Button>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="50dp"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/lowportTitle"
                    android:layout_width="190dp"
                    android:layout_height="match_parent"
                    android:text="@string/lowPortTitle"
                    android:textSize="18dp"
                    style="?android:listSeparatorTextViewStyle"
                    />

                <Button
                    android:id="@+id/lowportpointsdec"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/decrease"
                    android:textSize="30dp"
                    android:layout_weight="1"
                    android:textColor="#3F51B5"
                    android:background="#FFC107"
                    android:layout_marginLeft="16dp">
                </Button>

                <TextView
                    android:id="@+id/lowportpoints"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="25dp"
                    android:layout_weight="3"
                    android:textAlignment="center">
                </TextView>

                <Button
                    android:id="@+id/lowportpointsinc"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/increase"
                    android:textSize="30dp"
                    android:layout_weight="1"
                    android:textColor="#3F51B5"
                    android:background="#FFC107"
                    android:layout_marginRight="30dp"
                    >
                </Button>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>




</androidx.coordinatorlayout.widget.CoordinatorLayout>