<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/start_title"
                    style="?android:listSeparatorTextViewStyle"
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"
                    android:text="Start Position"
                    android:textColor="#000000"
                    android:textSize="24dp" />

                <RadioGroup
                    android:id="@+id/start_position"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingTop="5dp"
                    android:paddingBottom="10dp">

                    <RadioButton
                        android:id="@+id/start_one"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="1" />

                    <RadioButton
                        android:id="@+id/start_two"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="2" />

                    <RadioButton
                        android:id="@+id/start_three"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="3" />

                    <RadioButton
                        android:id="@+id/start_four"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="4" />

                    <RadioButton
                        android:id="@+id/start_five"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="5" />

                    <RadioButton
                        android:id="@+id/start_six"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="6" />

                </RadioGroup>


            </LinearLayout>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/starting_position" />


            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="20dp"
            android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/tarmac_title"
                    style="?android:listSeparatorTextViewStyle"
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:text="Tarmac"
                    android:textColor="#000000"
                    android:textSize="24dp" />

            <CheckBox
                android:id="@+id/tarmac_checkbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:text="@string/tarmac_cross"
                android:textSize="18dp" />

        </LinearLayout>

            <TextView
                android:id="@+id/hub_scoring_title"
                style="?android:listSeparatorTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:text="HUB SCORING"
                android:textColor="#000000"
                android:textSize="24dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/high_hub_title"
                    android:layout_width="190dp"
                    android:layout_height="match_parent"
                    android:text="Upper Hub"
                    android:textSize="18dp"
                    style="?android:listSeparatorTextViewStyle"/>

                <Button
                    android:id="@+id/high_points_dec"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:layout_weight="1"
                    android:background="#3F98B5"
                    android:text="@string/decrease"
                    android:textColor="#FFC107"
                    android:textSize="30dp"></Button>

                <TextView
                    android:id="@+id/high_points_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="25dp"
                    android:layout_weight="3"
                    android:textAlignment="center">
                </TextView>

                <Button
                    android:id="@+id/high_points_inc"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="30dp"
                    android:layout_weight="1"
                    android:background="#3F98B5"
                    android:text="@string/increase"
                    android:textColor="#FFC107"
                    android:textSize="30dp"></Button>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="50dp"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/low_points_title"
                    android:layout_width="190dp"
                    android:layout_height="match_parent"
                    android:text="Lower Hub"
                    android:textSize="18dp"
                    style="?android:listSeparatorTextViewStyle"
                    />

                <Button
                    android:id="@+id/low_points_dec"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:layout_weight="1"
                    android:background="#FFC107"
                    android:text="@string/decrease"
                    android:textColor="#3F98B5"
                    android:textSize="30dp"></Button>

                <TextView
                    android:id="@+id/low_points_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="25dp"
                    android:layout_weight="3"
                    android:textAlignment="center">
                </TextView>

                <Button
                    android:id="@+id/low_points_inc"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="30dp"
                    android:layout_weight="1"
                    android:background="#FFC107"
                    android:text="@string/increase"
                    android:textColor="#3F98B5"
                    android:textSize="30dp"></Button>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>



</androidx.coordinatorlayout.widget.CoordinatorLayout>
