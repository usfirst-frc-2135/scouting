<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:paddingBottom="7dp"
            android:backgroundTint="#719da9"
            android:background="@drawable/top_rounded_rect">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            </LinearLayout>

            <TextView
                android:id="@+id/preload_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="7dp"
                android:text="PRELOAD"
                android:textColor="@color/specialTextPrimary"
                android:textSize="22sp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/preload_checkbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="7dp"
                android:buttonTint="#354c54"
                android:text="Shot preloaded 8 fuel"
                android:textColor="@color/specialTextPrimary"
                android:textSize="22sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bottom_rounded_rect"
            android:backgroundTint="#8DB0BA">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="PRELOAD ACCURACY RATE:"
                android:textColor="@color/specialTextPrimary"
                android:textStyle="bold"
                android:textSize="20sp" />


            <RadioGroup
                android:id="@+id/auton_accuracy_boxes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/bottom_rounded_rect"
                android:backgroundTint="#8DB0BA">

                <RadioButton
                    android:layout_marginStart="10dp"
                    android:id="@+id/auton_accuracy_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:buttonTint="#354c54"
                    android:text="N/A" />

                <RadioButton
                    android:id="@+id/auton_accuracy_a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:buttonTint="#354c54"
                    android:layout_marginBottom="5dp"
                    android:text="All" />

                <RadioButton
                    android:id="@+id/auton_accuracy_m"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:buttonTint="#354c54"
                    android:text="Most" />

                <RadioButton
                    android:id="@+id/auton_accuracy_s"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:buttonTint="#354c54"
                    android:text="Half" />

                <RadioButton
                    android:id="@+id/auton_accuracy_f"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:buttonTint="#354c54"
                    android:text="Some" />

                <RadioButton
                    android:id="@+id/auton_accuracy_n"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:buttonTint="#354c54"
                    android:layout_marginBottom="5dp"
                    android:text="None" />

            </RadioGroup>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:background="@drawable/rounded_rect"
            android:backgroundTint="#EE965F"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                android:id="@+id/Hopper_label"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="1dp"
                android:text="HOPPER"
                android:textColor="@color/specialTextPrimary"
                android:textSize="22sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/auton_Hopper_decr_button"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="70dp"
                android:background="@drawable/rounded_rect"
                android:backgroundTint="#c64e34"
                android:text="@string/decrease"
                android:textColor="#FFFFFF"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/auton_Hopper_score_total"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textAlignment="center"
                android:textSize="25sp" />

            <Button
                android:id="@+id/auton_Hopper_incr_button"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/rounded_rect"
                android:backgroundTint="#c64e34"
                android:text="@string/increase"
                android:textColor="#FFFFFF"
                android:textSize="30dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bottom_rounded_rect"
                android:backgroundTint="#F0A271">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="ACCURACY RATE:"
                        android:textColor="@color/specialTextPrimary"
                        android:textStyle="bold"
                        android:textSize="20sp" />


                <RadioGroup
                    android:id="@+id/auton_accuracy_buttons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/bottom_rounded_rect"
                    android:backgroundTint="#F0A271">

                    <RadioButton
                        android:layout_marginStart="10dp"
                        android:id="@+id/auton_accuracy_na"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="22sp"
                        android:buttonTint="#c64e34"
                        android:text="N/A" />

                    <RadioButton
                        android:layout_marginBottom="5dp"
                        android:id="@+id/auton_accuracy_most"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="22sp"
                        android:buttonTint="#c64e34"
                        android:text="Most" />

                    <RadioButton
                        android:id="@+id/auton_accuracy_three_fourths"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="27sp"
                        android:buttonTint="#c64e34"
                        android:text="¾" />

                    <RadioButton
                        android:id="@+id/auton_accuracy_half"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="27sp"
                        android:buttonTint="#c45120"
                        android:text="½" />

                    <RadioButton
                        android:id="@+id/auton_accuracy_quarter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="-537dp"
                        android:layout_marginTop="30dp"
                        android:layout_weight="1"
                        android:buttonTint="#c45120"
                        android:text="¼"
                        android:textSize="27sp" />

                    <RadioButton
                        android:layout_marginStart="21.5dp"
                        android:layout_marginTop="30dp"
                        android:id="@+id/auton_accuracy_few"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingEnd="5dp"
                        android:textSize="22sp"
                        android:buttonTint="#c45120"
                        android:text="Few" />

                    <RadioButton
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="30dp"
                        android:id="@+id/auton_accuracy_none"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="22sp"
                        android:buttonTint="#c45120"
                        android:text="None" />

                    <RadioButton
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="30dp"
                        android:id="@+id/auton_accuracy_cannot_tell"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="22sp"
                        android:buttonTint="#c45120"
                        android:layout_marginBottom="5dp"
                        android:visibility="invisible"
                        android:text="IDK" />

                </RadioGroup>


            </LinearLayout>

            </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_rect"
                    android:backgroundTint="#D48C74"
                    android:orientation="vertical"
                    android:layout_marginTop="7dp">

                    <TextView
                        android:id="@+id/preload_tsitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="GOT FUEL FROM"
                        android:layout_marginTop="7dp"
                        android:layout_marginStart="5dp"
                        android:textColor="@color/specialTextPrimary"
                        android:background="#D48C74"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#e6a28b"
                        android:orientation="horizontal"
                        android:paddingTop="7dp"
                        android:background="@drawable/bottom_rounded_rect"
                        android:paddingBottom="5dp">

                        <CheckBox
                            android:id="@+id/az_checkbox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="7dp"
                            android:buttonTint="#8e5845"
                            android:text="Alliance Zone"
                            android:textColor="@color/specialTextPrimary"
                            android:textSize="22sp" />

                        <CheckBox
                            android:id="@+id/depot_checkbox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:buttonTint="#8e5845"
                            android:text="Depot"
                            android:textColor="@color/specialTextPrimary"
                            android:textSize="22sp" />

                        <CheckBox
                            android:id="@+id/outpost_checkbox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:buttonTint="#8e5845"
                            android:text="Outpost"
                            android:textColor="@color/specialTextPrimary"
                            android:textSize="22sp" />

                        <CheckBox
                            android:id="@+id/nz_checkbox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:buttonTint="#8e5845"
                            android:text="Neutral Zone"
                            android:textColor="@color/specialTextPrimary"
                            android:textSize="22sp" />

                    </LinearLayout>
                </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="420dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/rounded_rect"
            android:backgroundTint="#93A685"
            android:paddingTop="10dp">

            <LinearLayout
                android:layout_width="500dp"
                android:layout_height="330dp"
                android:layout_marginLeft="7dp"
                android:background="@drawable/tower_angle_five">

                <TextView
                    android:id="@+id/Climb_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="7dp"
                    android:text="CLIMB"
                    android:textColor="@color/specialTextPrimary"
                    android:background="@drawable/rounded_rect"
                    android:backgroundTint="#BECCB8"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <RadioGroup
                    android:id="@+id/auton_climb_buttons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="#8957A1"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/auton_climb_na"
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="40dp"
                        android:background="@drawable/rounded_rect"
                        android:backgroundTint="#BECCB8"
                        android:buttonTint="#536149"
                        android:text="N/A"
                        android:textSize="20sp" />

                    <RadioButton
                        android:id="@+id/auton_climb_back"
                        android:layout_width="55dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="115dp"
                        android:layout_marginTop="265dp"
                        android:background="@drawable/rounded_rect"
                        android:backgroundTint="#BECCB8"
                        android:buttonTint="#536149"
                        android:text="B"
                        android:textSize="20sp" />

                    <RadioButton
                        android:id="@+id/auton_climb_left"
                        android:layout_width="55dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="185dp"
                        android:background="@drawable/rounded_rect"
                        android:backgroundTint="#BECCB8"
                        android:buttonTint="#536149"
                        android:text="L"
                        android:textSize="20dp" />

                    <RadioButton
                        android:id="@+id/auton_climb_front"
                        android:layout_width="55dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="265dp"
                        android:background="@drawable/rounded_rect"
                        android:backgroundTint="#BECCB8"
                        android:buttonTint="#536149"
                        android:text="F"
                        android:textSize="20sp" />

                    <RadioButton
                        android:id="@+id/auton_climb_right"
                        android:layout_width="55dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="-15dp"
                        android:layout_marginTop="130dp"
                        android:background="@drawable/rounded_rect"
                        android:backgroundTint="#BECCB8"
                        android:buttonTint="#536149"
                        android:text="R"
                        android:textSize="20sp" />

                </RadioGroup>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
