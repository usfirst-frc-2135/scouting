<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor">

<!--start LEAVE vertical layout -->
        <!--end LEAVE vertical layout -->

    <!--start CORAL SCORING side-by-side-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:background="@drawable/rounded_rect"
            android:backgroundTint="#EFE2FF"
            android:orientation="horizontal"
            android:paddingTop="20dp"
            android:paddingBottom="20dp">

            <TextView
                android:id="@+id/preload_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="PRELOAD"
                android:textColor="@color/specialTextPrimary"
                android:textSize="22sp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/preload_checkbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:buttonTint="#8957A1"
                android:text="Preloaded 8 fuel for auton"
                android:textColor="@color/specialTextPrimary"
                android:textSize="22sp" />

        </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#EFE2FF"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/Hopper_label"
                        android:textStyle="bold"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="5dp"
                        android:text="HOPPER"
                        android:textColor="@color/specialTextPrimary"
                        android:textSize="22sp" />

                    <Button
                        android:id="@+id/auton_Hopper_decr_button"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/rounded_rect"
                        android:backgroundTint="#f08080"
                        android:text="@string/decrease"
                        android:textColor="#FFFFFF"
                        android:textSize="30dp" />

                    <TextView
                        android:id="@+id/auton_Hopper_score_total"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:textAlignment="center"
                        android:textSize="25sp" />

                    <Button
                        android:id="@+id/auton_Hopper_incr_button"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="30dp"
                        android:background="@drawable/rounded_rect"
                        android:backgroundTint="#f08080"
                        android:text="@string/increase"
                        android:textColor="#FFFFFF"
                        android:textSize="30dp" />
                </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
           android:background="#DFE2FB">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textSize="20sp"
                android:textColor="@color/specialTextPrimary"
                android:text="ACCURACY RATE:" />

            <RadioGroup
                android:id="@+id/auton_accuracy_buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#DFE2FB">

                <RadioButton
                    android:id="@+id/auton_accuracy_most"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="25sp"
                    android:buttonTint="#8957A1"
                    android:text="M" />

                <RadioButton
                    android:id="@+id/auton_accuracy_three_fourths"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="30sp"
                    android:buttonTint="#8957A1"
                    android:text="¾" />

                <RadioButton
                    android:id="@+id/auton_accuracy_half"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="30sp"
                    android:buttonTint="#8957A1"
                    android:text="½" />

                <RadioButton
                    android:id="@+id/auton_accuracy_quarter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="30sp"
                    android:buttonTint="#8957A1"
                    android:text="¼" />

                <RadioButton
                    android:id="@+id/auton_accuracy_few"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:buttonTint="#8957A1"
                    android:text="F" />

                <RadioButton
                    android:id="@+id/auton_accuracy_none"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:buttonTint="#8957A1"
                    android:text="0" />

                <RadioButton
                    android:id="@+id/auton_accuracy_cannot_tell"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:buttonTint="#8957A1"
                    android:text="IDK" />

            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/preload_tsitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="GOT FUEL FROM"
                    android:textColor="@color/specialTextPrimary"
                    android:textSize="22sp"
                    android:textStyle="bold" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17dp"
                    android:background="@drawable/rounded_rect"
                    android:backgroundTint="#EFE2FF"
                    android:orientation="horizontal"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp">

                    <CheckBox
                        android:id="@+id/az_checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:buttonTint="#8957A1"
                        android:text="ALLIANCE ZONE"
                        android:textColor="@color/specialTextPrimary"
                        android:textSize="22sp" />

                    <CheckBox
                        android:id="@+id/depot_checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:buttonTint="#8957A1"
                        android:text="DEPOT"
                        android:textColor="@color/specialTextPrimary"
                        android:textSize="22sp" />

                    <CheckBox
                        android:id="@+id/outpost_checkbox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:buttonTint="#8957A1"
                        android:text="OUTPOST"
                        android:textColor="@color/specialTextPrimary"
                        android:textSize="22sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:textSize="20sp"
                            android:textColor="@color/specialTextPrimary"
                            android:text="CLIMB" />

                        <RadioGroup
                            android:id="@+id/auton_climb_buttons"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:background="#DFE2FB">

                            <RadioButton
                                android:id="@+id/auton_climb_left"
                                android:layout_marginLeft="10dp"
                                android:layout_marginBottom="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textSize="20sp"
                                android:buttonTint="#8957A1"
                                android:text="LEFT" />

                            <RadioButton
                                android:id="@+id/auton_climb_front"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textSize="20sp"
                                android:buttonTint="#8957A1"
                                android:text="FRONT" />

                            <RadioButton
                                android:id="@+id/auton_climb_right"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:buttonTint="#8957A1"
                                android:text="RIGHT"
                                android:textSize="20sp" />

                            <RadioButton
                                android:id="@+id/auton_climb_back"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:buttonTint="#8957A1"
                                android:text="BACK"
                                android:textSize="20sp" />

                            <RadioButton
                                android:id="@+id/auton_climb_na"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textSize="20sp"
                                android:buttonTint="#8957A1"
                                android:text="N/A" />


                        </RadioGroup>


                    </LinearLayout>

            </LinearLayout>
        </LinearLayout>



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
