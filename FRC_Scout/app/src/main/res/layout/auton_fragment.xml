<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

<!--start LEAVE vertical layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:orientation="horizontal"
            android:background="@drawable/rounded_rect"
            android:backgroundTint="#EFE2FF"
            android:paddingTop="15dp"
            android:paddingBottom="15dp">

            <TextView
                android:id="@+id/leave_title"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LEAVE"
                android:textStyle="bold"
                android:textColor="@color/specialTextPrimary"
                android:textSize="22sp" />

            <CheckBox
                android:id="@+id/leave_checkbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:buttonTint="#8957A1"
                android:textColor="@color/specialTextPrimary"
                android:text="Leave Starting Line"
                android:textSize="22sp" />
        </LinearLayout>
<!--end LEAVE vertical layout -->

<!--start REEF ZONES/CORAL SCORING side-by-side-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/backgroundColor"
            android:orientation="horizontal"
            android:paddingTop="11dp">

<!--start REEF ZONES-->
            <LinearLayout
                android:id="@+id/reef_zones_layout"
                android:layout_width="290dp"
                android:layout_height="350dp"
                android:background="@drawable/reefzone_r1_sctbl"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/reef_zones_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:text="REEFZONE SIDES SCORED IN"
                        android:textColor="@color/specialTextPrimary"
                        android:textStyle="bold"
                        android:textSize="20sp" />
                </LinearLayout>

<!--start REEF ZONE checkboxes -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <CheckBox
                        android:layout_marginTop="140dp"
                        android:id="@+id/reefzone_b1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="#000000"
                        android:layout_marginStart="50dp" />
                    <CheckBox
                        android:layout_marginTop="73dp"
                        android:id="@+id/reefzone_b2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="#000000"
                        android:layout_marginStart="10dp" />

                    <CheckBox
                        android:layout_marginTop="73dp"
                        android:id="@+id/reefzone_b3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="#000000"
                        android:layout_marginStart="45dp" />

                    <CheckBox
                        android:layout_marginTop="140dp"
                        android:id="@+id/reefzone_b4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="#000000"
                        android:layout_marginStart="4dp" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <CheckBox
                        android:layout_marginTop="28dp"
                        android:id="@+id/reefzone_b6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="95dp"
                        android:buttonTint="#000000" />

                    <CheckBox
                        android:layout_marginTop="28dp"
                        android:id="@+id/reefzone_b5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="#000000"
                        android:layout_marginStart="45dp" />
                </LinearLayout>
<!--end REEF ZONE checkboxes -->

            </LinearLayout>
<!--end REEF ZONES-->

<!--start CORAL SCORING-->
            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="350dp"
                android:background="@drawable/coral_levels"
                android:layout_marginStart="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/L4_label"
                        android:textStyle="bold"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="40dp"
                        android:layout_marginTop="5dp"
                        android:text="L4"
                        android:textColor="@color/specialTextPrimary"
                        android:textSize="22sp" />

                    <Button
                        android:id="@+id/auton_L4_decr_button"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/rounded_rect"
                        android:backgroundTint="#f08080"
                        android:text="@string/decrease"
                        android:textColor="#FFFFFF"
                        android:textSize="30dp" />

                    <TextView
                        android:id="@+id/auton_L4_score_total"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:textAlignment="center"
                        android:textSize="25sp" />

                    <Button
                        android:id="@+id/auton_L4_incr_button"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="30dp"
                        android:background="@drawable/rounded_rect"
                        android:backgroundTint="#f08080"
                        android:text="@string/increase"
                        android:textColor="#FFFFFF"
                        android:textSize="30dp" />
                </LinearLayout>
<!-- L3 Coral-->
                <android.widget.Space
                    android:layout_width="match_parent"
                    android:layout_height="60dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/L3_label"
                        android:textStyle="bold"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="40dp"
                        android:layout_marginTop="5dp"
                        android:text="L3"
                        android:textColor="@color/specialTextPrimary"
                        android:textSize="22sp" />

                    <Button
                        android:id="@+id/auton_L3_decr_button"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/rounded_rect"
                        android:backgroundTint="#f08080"
                        android:text="@string/decrease"
                        android:textColor="#FFFFFF"
                        android:textSize="30dp" />

                    <TextView
                        android:id="@+id/auton_L3_score_total"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:textAlignment="center"
                        android:textSize="25sp" />

                    <Button
                        android:id="@+id/auton_L3_incr_button"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="30dp"
                        android:background="@drawable/rounded_rect"
                        android:backgroundTint="#f08080"
                        android:text="@string/increase"
                        android:textColor="#FFFFFF"
                        android:textSize="30dp" />

                </LinearLayout>
<!-- L2 Coral-->
                <android.widget.Space
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/L2_label"
                        android:textStyle="bold"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="40dp"
                        android:layout_marginTop="5dp"
                        android:text="L2"
                        android:textColor="@color/specialTextPrimary"
                        android:textSize="22sp" />

                    <Button
                        android:id="@+id/auton_L2_decr_button"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/rounded_rect"
                        android:backgroundTint="#f08080"
                        android:text="@string/decrease"
                        android:textColor="#FFFFFF"
                        android:textSize="30dp" />

                    <TextView
                        android:id="@+id/auton_L2_score_total"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:textAlignment="center"
                        android:textSize="25sp" />

                    <Button
                        android:id="@+id/auton_L2_incr_button"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="30dp"
                        android:background="@drawable/rounded_rect"
                        android:backgroundTint="#f08080"
                        android:text="@string/increase"
                        android:textColor="#FFFFFF"
                        android:textSize="30dp" />

                </LinearLayout>
<!-- L1 Coral-->
                <android.widget.Space
                    android:layout_width="match_parent"
                    android:layout_height="35dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/L1_label"
                        android:textStyle="bold"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="40dp"
                        android:layout_marginTop="5dp"
                        android:text="L1"
                        android:textColor="@color/specialTextPrimary"
                        android:textSize="22sp" />

                    <Button
                        android:id="@+id/auton_L1_decr_button"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/rounded_rect"
                        android:backgroundTint="#f08080"
                        android:text="@string/decrease"
                        android:textColor="#FFFFFF"
                        android:textSize="30dp" />

                    <TextView
                        android:id="@+id/auton_L1_score_total"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:textAlignment="center"
                        android:textSize="25sp" />

                    <Button
                        android:id="@+id/auton_L1_incr_button"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="30dp"
                        android:background="@drawable/rounded_rect"
                        android:backgroundTint="#f08080"
                        android:text="@string/increase"
                        android:textColor="#FFFFFF"
                        android:textSize="30dp" />

                </LinearLayout>
            </LinearLayout>
<!-- end CORAL-->

        </LinearLayout>
<!-- end REEF/CORAL section-->

<!-- start GET FROM section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="11dp"
            android:backgroundTint="#faccc8"
            android:background="@drawable/top_rounded_rect"
            android:orientation="horizontal">

            <TextView
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"
                android:layout_width="270dp"
                android:layout_height="34dp"
                android:backgroundTint="#faccc8"
                android:text="GET CORAL FROM"
                android:textColor="@color/specialTextPrimary"
                android:textSize="22sp" />

            <CheckBox
                android:id="@+id/floor_coral"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:buttonTint="#8957A1"
                android:text="Floor"
                android:textSize="22sp" />

            <CheckBox
                android:id="@+id/station_coral"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:buttonTint="#8957A1"
                android:text="Station"
                android:textSize="22sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:backgroundTint="#ECFCF0"
            android:background="@drawable/bottom_rounded_rect"
            android:orientation="horizontal">

           <TextView
               android:layout_width="270dp"
               android:layout_marginTop="10dp"
               android:textStyle="bold"
               android:layout_height="wrap_content"
               android:layout_marginStart="5dp"
               android:text="GET ALGAE FROM"
               android:textColor="@color/specialTextPrimary"
               android:textSize="22sp" />

           <CheckBox
               android:id="@+id/floor_algae"
               android:layout_marginTop="10dp"
               android:layout_width="150dp"
               android:layout_height="wrap_content"
               android:buttonTint="#8957A1"
               android:textSize="22sp"
               android:text="Floor" />

           <CheckBox
               android:id="@+id/reef_algae"
               android:layout_marginTop="10dp"
               android:layout_width="wrap_content"
               android:buttonTint="#8957A1"
               android:layout_height="wrap_content"
               android:textSize="22sp"
               android:text="Reef" />

        </LinearLayout>

<!-- ALGAE SCORED start-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:background="@drawable/rounded_rect"
            android:backgroundTint="#CACFF9"
            android:orientation="vertical">

            <TextView
                android:id="@+id/algae_scored_label"
                android:layout_width="match_parent"
                android:layout_marginStart="5dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textStyle="bold"
                android:text="ALGAE SCORED"
                android:textColor="@color/specialTextPrimary"
                android:textSize="22sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:textSize="20sp"
                    android:background="#CACFF9"
                    android:textColor="@color/specialTextPrimary"
                    android:text="NET" />

                <Button
                    android:id="@+id/auton_algae_net_decr_button"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:background="@drawable/rounded_rect"
                    android:backgroundTint="#433DFC"
                    android:text="@string/decrease"
                    android:textColor="#FFFFFF"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/auton_algae_net_total"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:textAlignment="center"
                    android:layout_marginTop="8dp"
                    android:textSize="25sp" />

                <Button
                    android:id="@+id/auton_algae_net_incr_button"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="30dp"
                    android:background="@drawable/rounded_rect"
                    android:text="@string/increase"
                    android:backgroundTint="#433DFC"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="5dp"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/auton_algae_proc_label"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:background="#CACFF9"
                    android:textColor="@color/specialTextPrimary"
                    android:layout_marginBottom="10dp"
                    android:text="PROC" />

                <Button
                    android:id="@+id/auton_algae_proc_decr_button"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:background="@drawable/rounded_rect"
                    android:backgroundTint="#007c80"
                    android:text="@string/decrease"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="5dp"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/auton_algae_proc_total"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:textAlignment="center"
                    android:layout_marginTop="8dp"
                    android:textSize="25sp" />
    
                <Button
                    android:id="@+id/auton_algae_proc_incr_button"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="30dp"
                    android:background="@drawable/rounded_rect"
                    android:text="@string/increase"
                    android:layout_marginTop="5dp"
                    android:backgroundTint="#007c80"
                    android:textColor="#FFFFFF"
                    android:textSize="30dp" />
            </LinearLayout>
        </LinearLayout>
<!-- end ALGAE SCORED section-->

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
