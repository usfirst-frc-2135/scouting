<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp">
            <TextView
                android:id="@+id/tarmac_title"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:text="Tarmac"
                android:textSize="24dp"
                style="?android:listSeparatorTextViewStyle"
                android:textColor="#900C3F"/>
                android:paddingBottom="20dp"/>



            <CheckBox
                android:id="@+id/tarmac_checkbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:text="@string/tarmac_cross"
                android:textSize="18dp" />

        </LinearLayout>

            <TextView
                android:id="@+id/hub_scoring_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="HUB SCORING"
                android:textSize="24dp"
                style="?android:listSeparatorTextViewStyle"
                android:textColor="#900C3F"
                android:paddingTop="20dp"
                android:paddingBottom="10dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/high_hub_title"
                    android:layout_width="190dp"
                    android:layout_height="match_parent"
                    android:text="Upper Hub"
                    android:textSize="18dp"
                    style="?android:listSeparatorTextViewStyle"/>
                <Button
                    android:id="@+id/high_points_dec"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/decrease"
                    android:textSize="30dp"
                    android:layout_weight="1"
                    android:textColor="#3F51B5"
                    android:background="#FFC107"
                    android:layout_marginLeft="16dp">
                </Button>

                <TextView
                    android:id="@+id/high_points_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="25dp"
                    android:layout_weight="3"
                    android:textAlignment="center">
                </TextView>

                <Button
                    android:id="@+id/high_points_inc"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/increase"
                    android:textSize="30dp"
                    android:layout_weight="1"
                    android:textColor="#3F51B5"
                    android:background="#FFC107"
                    android:layout_marginRight="30dp">
                </Button>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="50dp"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/low_points_title"
                    android:layout_width="190dp"
                    android:layout_height="match_parent"
                    android:text="Lower Hub"
                    android:textSize="18dp"
                    style="?android:listSeparatorTextViewStyle"
                    />

                <Button
                    android:id="@+id/low_points_dec"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/decrease"
                    android:textSize="30dp"
                    android:layout_weight="1"
                    android:textColor="#3F51B5"
                    android:background="#FFC107"
                    android:layout_marginLeft="16dp">
                </Button>

                <TextView
                    android:id="@+id/low_points_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="25dp"
                    android:layout_weight="3"
                    android:textAlignment="center">
                </TextView>

                <Button
                    android:id="@+id/low_points_inc"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/increase"
                    android:textSize="30dp"
                    android:layout_weight="1"
                    android:textColor="#3F51B5"
                    android:background="#FFC107"
                    android:layout_marginRight="30dp"
                    >
                </Button>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>




</androidx.coordinatorlayout.widget.CoordinatorLayout>
