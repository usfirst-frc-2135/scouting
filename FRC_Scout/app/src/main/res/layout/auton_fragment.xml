<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor">

<!--start LEAVE vertical layout -->
        <!--end LEAVE vertical layout -->

    <!--start CORAL SCORING side-by-side-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:background="@drawable/rounded_rect"
            android:backgroundTint="#EFE2FF"
            android:orientation="horizontal"
            android:paddingTop="20dp"
            android:paddingBottom="20dp">

            <TextView
                android:id="@+id/preload_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Preload"
                android:textColor="@color/specialTextPrimary"
                android:textSize="22sp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/preload_checkbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:buttonTint="#8957A1"
                android:text="Preload 8 fuel"
                android:textColor="@color/specialTextPrimary"
                android:textSize="22sp" />

        </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/Hopper_label"
                        android:textStyle="bold"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="40dp"
                        android:layout_marginTop="5dp"
                        android:text="Hopper"
                        android:textColor="@color/specialTextPrimary"
                        android:textSize="22sp" />

                    <Button
                        android:id="@+id/auton_Hopper_decr_button"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/rounded_rect"
                        android:backgroundTint="#f08080"
                        android:text="@string/decrease"
                        android:textColor="#FFFFFF"
                        android:textSize="30dp" />

                    <TextView
                        android:id="@+id/auton_Hopper_score_total"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:textAlignment="center"
                        android:textSize="25sp" />

                    <Button
                        android:id="@+id/auton_Hopper_incr_button"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="30dp"
                        android:background="@drawable/rounded_rect"
                        android:backgroundTint="#f08080"
                        android:text="@string/increase"
                        android:textColor="#FFFFFF"
                        android:textSize="30dp" />
                </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
