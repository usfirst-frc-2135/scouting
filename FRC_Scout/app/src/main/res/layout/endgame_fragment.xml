<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="-44dp">

<!-- start START CLIMB section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="12dp"
            android:backgroundTint="#adbba2"
            android:background="@drawable/rounded_rect">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:layout_marginStart="5dp"
                    android:textColor="@color/specialTextPrimary"
                    android:text="START CLIMBING"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioGroup
                        android:id="@+id/start_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:backgroundTint="#c1cbb8"
                        android:background="@drawable/bottom_rounded_rect">

                        <RadioButton
                            android:id="@+id/start_none"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="22dp"
                            android:layout_weight="1"
                            android:buttonTint="@color/specialTextPrimary"
                            android:textColor="@color/specialTextPrimary"
                            android:text="N/A"/>

                        <RadioButton
                            android:id="@+id/start_before"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="22dp"
                            android:layout_weight="1"
                            android:textColor="@color/specialTextPrimary"
                            android:buttonTint="@color/specialTextPrimary"
                            android:text="Before"/>

                        <RadioButton
                            android:id="@+id/start_bell"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="22dp"
                            android:layout_weight="1"
                            android:textColor="@color/specialTextPrimary"
                            android:buttonTint="@color/specialTextPrimary"
                            android:text="Bell"/>

                        <RadioButton
                            android:id="@+id/start_ten"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="22dp"
                            android:layout_weight="1"
                            android:textColor="@color/specialTextPrimary"
                            android:buttonTint="@color/specialTextPrimary"
                            android:text="10s left"/>

                        <RadioButton
                            android:id="@+id/start_less"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="22dp"
                            android:layout_weight="1"
                            android:textColor="@color/specialTextPrimary"
                            android:buttonTint="@color/specialTextPrimary"
                            android:text="less than 10s"/>
                    </RadioGroup>
                </LinearLayout>
        </LinearLayout>
<!-- end START CLIMB section -->

        <!-- start CLIMB section -->
        <!--start layout for entire section-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:orientation="horizontal"
            android:paddingTop="7dp"
            android:layout_marginTop="5dp"
            android:backgroundTint="#93A685"
            android:background="@drawable/rounded_rect">

            <!--start layout that holds both of the images-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!--start layoout that holds first image-->
                <LinearLayout
                    android:id="@+id/imageone"
                    android:layout_width="wrap_content"
                    android:layout_height="230dp"
                    android:layout_marginStart="1dp"
                    android:layout_marginLeft="7dp"
                    android:background="@drawable/tower_angle_one">

                    <LinearLayout
                        android:layout_width="130dp"
                        android:layout_height="65dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginLeft="5dp"
                        android:backgroundTint="#f3d8ea"
                        android:background="@drawable/rounded_rect">

                        <TextView
                            android:id="@+id/Climb_title"
                            android:layout_width="115dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            android:layout_marginLeft="5dp"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:textColor="@color/specialTextPrimary"
                            android:text="CLIMB LEVEL:"/>
                    </LinearLayout>



                    <RadioGroup
                        android:id="@+id/endgame_level_climb_group"
                        android:layout_width="match_parent"
                        android:layout_height="230dp"
                        android:orientation="vertical"
                        android:layout_marginTop="0dp"
                        android:paddingTop="20dp">

                        <RadioButton
                            android:id="@+id/endgame_level_na"
                            android:layout_width="70dp"
                            android:layout_height="25dp"
                            android:layout_marginTop="1dp"
                            android:layout_marginStart="3dp"
                            android:textSize="18sp"
                            android:buttonTint="#db8ac1"
                            android:backgroundTint="#f3d8ea"
                            android:background="@drawable/rounded_rect"
                            android:text="N/A"/>
                        <RadioButton
                            android:id="@+id/endgame_level_three"
                            android:layout_width="65dp"
                            android:layout_height="25dp"
                            android:layout_marginStart="240dp"
                            android:layout_marginTop="27dp"
                            android:textSize="18sp"
                            android:buttonTint="#db8ac1"
                            android:backgroundTint="#f3d8ea"
                            android:background="@drawable/rounded_rect"
                            android:text="L3"/>
                        <RadioButton
                            android:id="@+id/endgame_level_two"
                            android:layout_width="65dp"
                            android:layout_height="25dp"
                            android:layout_marginStart="240dp"
                            android:layout_marginTop="40dp"
                            android:textSize="18sp"
                            android:buttonTint="#db8ac1"
                            android:backgroundTint="#f3d8ea"
                            android:background="@drawable/rounded_rect"
                            android:text="L2"/>

                        <RadioButton
                            android:id="@+id/endgame_level_one"
                            android:layout_width="65dp"
                            android:layout_height="25dp"
                            android:layout_marginStart="240dp"
                            android:layout_marginTop="30dp"
                            android:textSize="18sp"
                            android:buttonTint="#db8ac1"
                            android:backgroundTint="#f3d8ea"
                            android:background="@drawable/rounded_rect"
                            android:text="L1"/>

                    </RadioGroup>
                </LinearLayout>
                <!--end layout that holds first image-->

                <!--start layout that holds second image-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_marginStart="1dp"
                    android:layout_marginLeft="7dp"
                    android:background="@drawable/tower_angle_two">

                    <LinearLayout
                        android:layout_width="130dp"
                        android:layout_height="65dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginLeft="5dp"
                        android:backgroundTint="#BECCB8"
                        android:background="@drawable/rounded_rect">

                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            android:layout_marginLeft="5dp"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:textColor="@color/specialTextPrimary"
                            android:text="CLIMB POSITION:"/>

                    </LinearLayout>

                    <RadioGroup
                        android:id="@+id/endgame_climb_buttons"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:orientation="horizontal"
                        android:buttonTint="#536149">

                        <RadioButton
                            android:id="@+id/endgame_climb_na"
                            android:layout_width="70dp"
                            android:layout_height="25dp"
                            android:layout_marginLeft="3dp"
                            android:layout_marginTop="25dp"
                            android:textSize="18sp"
                            android:buttonTint="#536149"
                            android:backgroundTint="#BECCB8"
                            android:background="@drawable/rounded_rect"
                            android:text="N/A"/>

                        <RadioButton
                            android:id="@+id/endgame_climb_back"
                            android:layout_width="50dp"
                            android:layout_height="25dp"
                            android:layout_marginTop="30dp"
                            android:layout_marginStart="90dp"
                            android:textSize="18sp"
                            android:buttonTint="#536149"
                            android:backgroundTint="#BECCB8"
                            android:background="@drawable/rounded_rect"
                            android:text="B"/>

                        <RadioButton
                            android:id="@+id/endgame_climb_left"
                            android:layout_width="50dp"
                            android:layout_height="25dp"
                            android:layout_marginTop="0dp"
                            android:layout_marginStart="30dp"
                            android:textSize="18dp"
                            android:backgroundTint="#BECCB8"
                            android:buttonTint="#536149"
                            android:background="@drawable/rounded_rect"
                            android:text="L"/>

                        <RadioButton
                            android:id="@+id/endgame_climb_front"
                            android:layout_width="50dp"
                            android:layout_height="25dp"
                            android:layout_marginTop="30dp"
                            android:layout_marginStart="-5dp"
                            android:textSize="18sp"
                            android:buttonTint="#536149"
                            android:backgroundTint="#BECCB8"
                            android:background="@drawable/rounded_rect"
                            android:text="F"/>

                        <RadioButton
                            android:id="@+id/endgame_climb_right"
                            android:layout_width="50dp"
                            android:layout_height="25dp"
                            android:layout_marginTop="0dp"
                            android:layout_marginStart="-10dp"
                            android:textSize="18sp"
                            android:buttonTint="#536149"
                            android:backgroundTint="#BECCB8"
                            android:background="@drawable/rounded_rect"
                            android:text="R"/>

                    </RadioGroup>
                    <!--end layout that holds second image-->
                </LinearLayout>
                <!--end layout that holds both images-->
            </LinearLayout>
            <!--end layout for the climb section-->
        </LinearLayout>
        <!--end CLIMB section-->

        <!-- start DIED section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="5dp"
            android:backgroundTint="#b96299"
            android:background="@drawable/rounded_rect">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/specialTextPrimary"
                android:text="DIED"/>

            <RadioGroup
                android:id="@+id/died_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:backgroundTint="#c781ad"
                android:background="@drawable/bottom_rounded_rect">

                <RadioButton
                    android:id="@+id/died_none"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22dp"
                    android:layout_weight="1"
                    android:textColor="@color/specialTextPrimary"
                    android:buttonTint="@color/specialTextPrimary"
                    android:text="N/A"/>

                <RadioButton
                    android:id="@+id/died_most"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:textSize="22dp"
                    android:layout_weight="1"
                    android:textColor="@color/specialTextPrimary"
                    android:buttonTint="@color/specialTextPrimary"
                    android:text="Most"/>

                <RadioButton
                    android:id="@+id/died_min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22dp"
                    android:layout_weight="1"
                    android:textColor="@color/specialTextPrimary"
                    android:buttonTint="@color/specialTextPrimary"
                    android:text="1min+"/>

                <RadioButton
                    android:id="@+id/died_thirty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22dp"
                    android:layout_weight="1"
                    android:textColor="@color/specialTextPrimary"
                    android:buttonTint="@color/specialTextPrimary"
                    android:text="30s+"/>

                <RadioButton
                    android:id="@+id/died_tt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22dp"
                    android:layout_weight="1"
                    android:textColor="@color/specialTextPrimary"
                    android:buttonTint="@color/specialTextPrimary"
                    android:text="30-15s"/>

                <RadioButton
                    android:id="@+id/no_show"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22dp"
                    android:layout_weight="1"
                    android:textColor="@color/specialTextPrimary"
                    android:buttonTint="@color/specialTextPrimary"
                    android:text="No show"/>
            </RadioGroup>
        </LinearLayout>
        <!-- end DIED section -->

        <!-- COMMENTS start -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="7dp">

            <TextView
                android:id="@+id/comments_title"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="@string/comments"
                android:textColor="@color/textPrimary" />

            <EditText
                android:id="@+id/comments"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:textSize="20sp"
                android:maxLength="400"
                android:inputType="text"
                android:textColor="@color/textPrimary"
                android:textColorHint="@color/hintColor"
                android:autofillHints="Enter comment here"
                android:hint="Comment">

            </EditText>
        </LinearLayout>
        <!-- COMMENTS end-->

<!-- WARNING SECTION start -->
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="7dp">

            <TextView
                android:id="@+id/warn_msg1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:textSize="19sp"
                android:textStyle="bold"
                android:text="WARN1"/>

            <TextView
                android:id="@+id/warn_msg2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:textSize="19sp"
                android:textStyle="bold"
                android:text="WARN2"/>

        </LinearLayout>
        <!-- WARNING SECTION end-->

        <android.widget.Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <ImageButton
                android:id="@+id/gen_QR"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/rounded_rect"
                android:backgroundTint="#3F98B5"
                android:focusable="true"
                android:src="@drawable/qr_code_icon"
                android:contentDescription="QR code image"
                android:textColor="#3F51B5" />

            <ImageButton
                android:id="@+id/gen_QR_disabled"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/rounded_rect"
                android:backgroundTint="#6e848d"
                android:focusable="true"
                android:src="@drawable/qr_code_icon"
                android:contentDescription="QR code image"
                android:textColor="#3F51B5" />

            <android.widget.Space
                android:layout_width="90dp"
                android:layout_height="match_parent" />

            <Button
                android:layout_marginStart="80dp"
                android:id="@+id/nav_to_menu_button"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/rounded_rect"
                android:backgroundTint="#FFC107"
                android:focusable="true"
                android:text="Done"
                android:textColor="@color/textPrimary"
                android:layout_toEndOf="@id/gen_QR"
                android:textSize="36sp" />

            <Button
                android:layout_marginStart="80dp"
                android:id="@+id/nav_to_menu_button_disabled"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/rounded_rect"
                android:backgroundTint="#b19769"
                android:focusable="true"
                android:text="Done"
                android:textColor="@color/textPrimary"
                android:layout_toEndOf="@id/gen_QR"
                android:textSize="36sp" />

        </RelativeLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
