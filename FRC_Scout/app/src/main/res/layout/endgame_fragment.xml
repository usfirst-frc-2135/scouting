<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="-44dp">

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp"></Space>

        <LinearLayout
            android:background="@color/endgamecardColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="20dp"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/endgamechargeStationTitle"
                style="?android:listSeparatorTextViewStyle"
                android:layout_width="215dp"
                android:layout_height="wrap_content"
                android:text="Charge Station"
                android:textColor="@color/specialTextPrimary"
                android:textSize="24dp" />

        </LinearLayout>

        <!--<Space
            android:layout_width="11dp"
            android:layout_height="50dp"></Space>-->

        <RadioGroup
            android:id="@+id/endgame_charge_level"
            android:background="@color/endgamecardColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Space
                android:layout_width="11dp"
                android:layout_height="56dp"></Space>

            <RadioButton
                android:id="@+id/level_endgamenone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:buttonTint="@color/specialTextPrimary"
                android:text="None"
                android:textColor="@color/specialTextPrimary"
                android:textSize="22sp" />

            <RadioButton
                android:id="@+id/level_endgameparked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:buttonTint="@color/specialTextPrimary"
                android:text="Parked"
                android:textColor="@color/specialTextPrimary"
                android:textSize="22sp" />

            <RadioButton
                android:id="@+id/level_endgamedocked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:buttonTint="@color/specialTextPrimary"
                android:text="Docked"
                android:textColor="@color/specialTextPrimary"
                android:textSize="22sp" />

            <RadioButton
                android:id="@+id/level_endgameengaged"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:buttonTint="@color/specialTextPrimary"
                android:text="Engaged"
                android:textColor="@color/specialTextPrimary"
                android:textSize="22sp" />

            <Space
                android:layout_width="50dp"
                android:layout_height="56dp"></Space>

        </RadioGroup>

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp"></Space>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="15dp">

            <TextView
                android:id="@+id/died_title"
                style="?android:listSeparatorTextViewStyle"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Died"
                android:textColor="@color/textPrimary"
                android:textSize="25dp" />

            <CheckBox
                android:id="@+id/died_checkbox_true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:buttonTint="@color/textPrimary"
                android:text="Robot Died"
                android:textColor="@color/textPrimary"
                android:textSize="20dp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="24dp">

            <TextView
                android:id="@+id/comments_title"
                style="?android:listSeparatorTextViewStyle"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="@string/comments"
                android:textColor="@color/textPrimary"
                android:textSize="25dp" />

            <EditText
                android:id="@+id/comments"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:maxLength="400"
                android:textColor="@color/textPrimary"
                android:textColorHint="@color/hintColor"
                android:textSize="16dp">

            </EditText> 

        </LinearLayout>


        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp">

        </Space>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="10dp">

            <ImageButton
                android:id="@+id/gen_QR"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:background="#3F98B5"
                android:focusable="true"
                android:src="@drawable/qr_code_icon"
                android:textColor="#3F51B5"></ImageButton>

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp"></Space>

            <Button
                android:id="@+id/nav_to_menu_button"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:background="#FFC107"
                android:focusable="true"
                android:text="Done"
                android:textColor="@color/textPrimary"
                android:textSize="36dp"></Button>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
