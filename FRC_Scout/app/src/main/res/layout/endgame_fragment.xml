<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="-44dp"
        tools:layout_editor_absoluteY="46dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="20dp">

            <TextView
                android:id="@+id/climbTitle"
                style="?android:listSeparatorTextViewStyle"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Climb"
                android:textColor="@color/textPrimary"
                android:textSize="24dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RadioGroup
                    android:id="@+id/climb_level"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/level_zero"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="22sp"
                        android:layout_weight="1"
                        android:buttonTint="@color/textPrimary"
                        android:text="@string/level_zero"
                        android:textColor="@color/textPrimary"/>

                    <RadioButton
                        android:id="@+id/level_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="22sp"
                        android:buttonTint="@color/textPrimary"
                        android:layout_weight="1"
                        android:text="@string/level_one"
                        android:textColor="@color/textPrimary"/>

                    <RadioButton
                        android:id="@+id/level_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="22sp"
                        android:buttonTint="@color/textPrimary"
                        android:layout_weight="1"
                        android:text="@string/level_two"
                        android:textColor="@color/textPrimary"/>

                    <RadioButton
                        android:id="@+id/level_three"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="22sp"
                        android:buttonTint="@color/textPrimary"
                        android:layout_weight="1"
                        android:text="@string/level_three"
                        android:textColor="@color/textPrimary"/>

                    <RadioButton
                        android:id="@+id/level_four"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="22sp"
                        android:layout_weight="1"
                        android:buttonTint="@color/textPrimary"
                        android:text="@string/level_four"
                        android:textColor="@color/textPrimary"/>
                </RadioGroup>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="27dp">

            <TextView
                android:id="@+id/died_title"
                style="?android:listSeparatorTextViewStyle"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Died"
                android:textColor="@color/textPrimary"
                android:textSize="25dp" />

            <CheckBox
                    android:id="@+id/died_checkbox_true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:buttonTint="@color/textPrimary"
                    android:text="Robot Died"
                    android:textSize="20dp"
                    android:textColor="@color/textPrimary"/>



        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="27dp">

            <TextView
                android:id="@+id/comments_title"
                style="?android:listSeparatorTextViewStyle"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="@string/comments"
                android:textColor="@color/textPrimary"
                android:textSize="25dp" />

            <EditText
                android:id="@+id/comments"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:maxLength="400"
                android:layout_marginLeft="16dp"
                android:textColor="@color/textPrimary">

            </EditText>

        </LinearLayout>



        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp"
            >
>

        </Space>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="20dp"
            android:gravity="center_horizontal">

            <ImageButton
                android:id="@+id/gen_QR"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:background="#3F98B5"
                android:focusable="true"
                android:src="@drawable/qr_code_icon"
                android:textColor="#3F51B5"></ImageButton>

            <Space
                android:layout_width="match_parent"
                android:layout_height="50dp"></Space>

            <Button
                android:id="@+id/nav_to_menu_button"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:background="#FFC107"
                android:focusable="true"
                android:text="Done"
                android:textColor="@color/textPrimary"
                android:textSize="36dp"></Button>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
