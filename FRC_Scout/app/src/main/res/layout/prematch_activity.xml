<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingTop="15dp"
        android:paddingRight="30dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="-264dp">

        <TextView
            android:id="@+id/pre_match_title_comp"
            style="?android:listSeparatorTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/textSecondary"
            android:paddingTop="50dp"
            android:text="Competition Info"
            android:textColor="@color/textPrimary"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/comp_name_title"
                style="?android:listSeparatorTextViewStyle"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/textSecondary"
                android:text="COMPETITION"
                android:textColor="@color/textSecondary"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/comp_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:autofillHints="competition"
                android:backgroundTint="@color/textSecondary"
                android:ems="10"
                android:hint="competition"
                android:inputType="text"
                android:paddingTop="25dp"
                android:textColor="@color/textPrimary"
                android:textColorHint="@color/hintColor" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/scout_name_title"
                style="?android:listSeparatorTextViewStyle"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/textSecondary"
                android:text="SCOUT NAME"
                android:textColor="@color/textSecondary"
                android:textSize="18sp"
                android:textStyle="bold" />

            <AutoCompleteTextView
                android:id="@+id/scouter_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:backgroundTint="@color/textSecondary"
                android:ems="10"
                android:paddingTop="25dp"
                android:textColor="@color/textPrimary"
                android:textColorHint="@color/hintColor">

            </AutoCompleteTextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/scoring_table_side_ckbx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textSize="20sp"
                android:textColor="@color/textSecondary"
                android:buttonTint="@color/textSecondary"
                android:text="Scoring Table Side" />

        </LinearLayout>

        <TextView
            android:id="@+id/pre_match_title_match"
            style="?android:listSeparatorTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/textPrimary"
            android:paddingTop="50dp"
            android:text="Match Info"
            android:textColor="@color/textPrimary"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/match_number_title"
                style="?android:listSeparatorTextViewStyle"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/textSecondary"
                android:text="MATCH NUMBER"
                android:textColor="@color/textSecondary"
                android:textSize="18sp"
                android:textStyle="bold" />

            <AutoCompleteTextView
                android:id="@+id/match_number_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:backgroundTint="@color/textSecondary"
                android:ems="10"
                android:paddingTop="25dp"
                android:textColor="@color/textPrimary" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/team_number_title"
                style="?android:listSeparatorTextViewStyle"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/textSecondary"
                android:text="TEAM NUMBER"
                android:textColor="@color/textSecondary"
                android:textSize="18sp"
                android:textStyle="bold" />

            <AutoCompleteTextView
                android:id="@+id/team_number_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:backgroundTint="@color/textSecondary"
                android:ems="10"
                android:paddingTop="25dp"
                android:textColor="@color/textPrimary">

            </AutoCompleteTextView>
        </LinearLayout>

        <TextView
            android:id="@+id/error_message_pm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:text="Please fill in the missing fields!" />

        <Button
            android:id="@+id/start_scouting_button"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/rounded_rect"
            android:backgroundTint="@color/button1"
            android:text="Start Scouting"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="@color/buttonText">

        </Button>

        <Button
            android:id="@+id/pre_match_cancel_button"
            android:layout_width="112dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/rounded_rect"
            android:backgroundTint="@color/button2"
            android:fadingEdge="horizontal|vertical"
            android:text="cancel"
            android:textColor="@color/buttonText">

        </Button>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
